-- playdate_video
global PlaydateVideo: type <cimport "playdate_video", ctypedef, cinclude "pd_api.h"> = @record {
  loadVideo: function(path: cstring): *VideoPlayer,
  freePlayer: function(p: *VideoPlayer),
  setContext: function(p: *VideoPlayer, context: *Bitmap): cint,
  useScreenContext: function(p: *VideoPlayer),
  renderFrame: function(p: *VideoPlayer, n: cint): cint,
  getError: function(p: *VideoPlayer): cstring,
  getInfo: function(p: *VideoPlayer, outWidth: *cint, outHeight: *cint, outFrameRate: *float32, outFrameCount: *cint, outCurrentFrame: *cint),
  getContext: function(p: *VideoPlayer): *Bitmap,
}

-- playdate_videostream
global PlaydateVideoStream: type <cimport "playdate_videostream", ctypedef, cinclude "pd_api.h"> = @record {
  newPlayer: function(): *StreamPlayer,
  freePlayer: function(p: *StreamPlayer),

  setBufferSize: function(p: *StreamPlayer, video: cint, audio: cint),

  -- FIXME
  -- setFile: function(p: *StreamPlayer, file: *SDFile),
  setHTTPConnection: function(p: *StreamPlayer, conn: *HTTPConnection),

  getFilePlayer: function(p: *StreamPlayer): *FilePlayer,
  getVideoPlayer: function(p: *StreamPlayer): *VideoPlayer,

  --setContext: function(p: *StreamPlayer, context: *Bitmap): cint,
  --getContext: function(p: *StreamPlayer): *Bitmap,

  -- returns true if it drew a frame, else false
  update: function(p: *StreamPlayer): boolean,

  getBufferedFrameCount: function(p: *StreamPlayer): cint,

  getBytesRead: function(p: *StreamPlayer): uint32,

  -- 3.0
  setTCPConnection: function(p: *StreamPlayer, conn: *TCPConnection),
}

